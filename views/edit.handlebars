<div class="main-section">
    <div class="top-bar">
        <div class="top-bar--title">
            <h3>Invoice <span style="color:dimgrey">({{invoice.number}})</span> </h3>
        </div>
        <ul class="top-bar--nav">
            <li><a href="/invoices/add"><i class="fas fa-plus"></i> New Invoice</a></li>
            <li><a href="#" class="black">Sign out</a></li>
        </ul>
    </div>
    
    <div class="main-content">
        
        <div class="invoice-form">
            <br>
            <form action="/invoices/edit/{{invoice.id}}" method="POST">
                <div class="invoice-form--address">
                    <div class="invoice-form--name">
                        <label for="customername">Billing to</label>
                        <input type="text" name="customername" value="{{ invoice.customername }}"><br>
                        <label for="customeraddress">Address</label>
                        <input type="text" name="customeraddress" value={{invoice.customeraddress}}>
                    </div>
                    <div class="invoice-form--date">
                        <label for="date">Date</label>
                        <input type="text" name="date" value={{invoice.date}}><br>
                        <label for="number">Invoice No</label>
                        <input type="text" name="number" value={{invoice.number}}>
                    </div>
                </div>
                <div class="invoice-form--items">
                    <h4>EXPENSES</h4>
                    {{#each invoice.Items }}
                    <div class="invoice-form--item">
                        <label for="name"></label>
                        <input type="text" name="name" placeholder="Item one" value="{{name}}">
                        <label for="quantity"></label>
                        <input type="text" name="quantity" placeholder="1" value="{{quantity}}">
                        <label for="price"></label>
                        <input type="text" name="price" placeholder="" value="{{price}}">
                        <input type="hidden" name="id" value="{{id}}">
                    </div>
                    {{/each}}
                    <a href="#"><i class="fas fa-plus"></i> Add Item</a>
                </div><br>
                <div class="invoice-form--summary">
                    <!-- <div class="invoice-form--option">
                        <h4>Subtotal</h4>
                        <h4>2000</h4>
                    </div> -->
                   
                    <div class="invoice-form--option">
                        <h4>Total</h4>
                        <span><input type="text" name="total" value={{invoice.total}}></span>
                    </div>
                </div> <br>
                <a href="/invoices/{{invoice.id}}/pdf" class="button">Print PDF</a>
                <button class="button" type="submit">update Invoice</button>
            </form>
        </div>
        <div class="invoice-options">
            <br>
            <div class="searchbar">
                
                <input type="search" placeholder="search">
            </div>
            <ul class="option--list">
                <h4>SERVICES</h4>
                <li class="service-options"><a href="#">Tooth Filling</a></li>
                <li class="service-options"><a href="#">Tooth Removal</a></li>
                <li class="service-options"><a href="#">Tooth Replacement</a></li>
            </ul>
        </div>
    </div>
</div>